# CRITICAL SECURITY CONFIGURATION
# Copy this file to .env and set your production values

# Database & Application Encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MASTER_ENCRYPTION_KEY=your_64_character_hex_key_here
ENCRYPT_KEY=your_legacy_encryption_key_here

# JWT Security
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_128_character_jwt_secret_here

# Environment
NODE_ENV=production

# Port Configuration
PORT=3000

# Advanced Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5
SESSION_TIMEOUT=1800000

# File Upload Limits
MAX_FILE_SIZE=1048576
MAX_JSON_SIZE=1048576

# Security Headers
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains; preload
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# Railway Platform Security
RAILWAY_STATIC_URL=https://your-app.railway.app
ALLOWED_ORIGINS=https://your-app.railway.app

# Database Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000
BACKUP_RETENTION_DAYS=7

# Monitoring & Logging
SECURITY_MONITORING=true
LOG_LEVEL=info
SIEM_ENDPOINT=https://your-siem-endpoint.com/api/events

# Anti-Tampering
FILE_INTEGRITY_CHECK=true
SESSION_INTEGRITY_CHECK=true

# IMPORTANT SECURITY NOTES:
# 1. Never commit the actual .env file to version control
# 2. Use strong, randomly generated keys
# 3. Rotate keys regularly in production
# 4. Monitor the security logs for any suspicious activity
# 5. Enable Railway's built-in security features
# 6. Set up proper firewall rules
# 7. Use Railway's private networking when possible